---
import Loader from "../components/Loader.jsx";
const { title = "Mi Portafolio", children } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 text-white">
    <Loader>
      <main class="p-8">
        {children}
      </main>
    </Loader>
  </body>
</html>
